{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üê∞ Bun: Dev con inspect",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": [
        "--inspect-brk=9229",  // rompe en la primera l√≠nea
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.next/**/*.js"
      ]
    },
    {
      "name": "üîó Adjuntar a Bun (9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "timeout": 30000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    }
  ]
}
